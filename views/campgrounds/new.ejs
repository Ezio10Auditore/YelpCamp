<%- include("../partials/header") %>
    <div class="container">
         <h1 class="text-center" style="margin-bottom: 20px;">Form to create a new Campground</h1>
        <div class="row">
            <div style="width: 30%; margin: 0 auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" placeholder="new campground" type="text" name="newCamp" id="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="newCampIMG" placeholder="image url">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="newCampDES" placeholder="something about the campground">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="newCampPRC" placeholder="price of the campground">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>                    
                </form>
                <a class="btn btn-block btn-info" href="/campgrounds">Back to campgrounds</a>
            </div>
        </div>
    </div>
   
<%- include("../partials/footer") %>