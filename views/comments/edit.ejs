                       <input class="form-control" value="<%= comm.text %>" type="text" name="comment[text]" id="">
                   </div>
                   <div class="form-group">
                       <button class="btn btn-lg btn-primary btn-block">Update</button>
                   </div>                    
               </form>
               <a href="/campgrounds">Back to campgrounds</a>
           </div>
       </div>
   </div>
