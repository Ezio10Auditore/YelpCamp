    <div class="container">
        <h1 class="text-center" style="margin-bottom: 20px;">Edit comment</h1>
       <div class="row">
           <div style="width: 30%; margin: 0 auto;">
               <form action="/campgrounds/<%= campC_id %>/comments/<%= comm._id %>?_method=PUT" method="POST">
